<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('./includes/header.ejs') %>
  <div class="create-product">
    <form action="<%= edit ? '/admin/product/edit' : '/admin/add-product' %>" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label>Title: </label>
      <input type="text" name="title" value="<%- edit ? title : '' %>">
      <label>Price: </label>
      <input type="text" name="price" value="<%- edit ? price : '' %>">
      <label>Decription: </label>
      <input type="text" name="description" value="<%- edit ? description : '' %>">
      <label>Image: </label>
      <input type="file" name="image">
      <% if(edit) { %>
      <input type="hidden" name="id" value="<%= _id %>">
      <% } %>
      <input type="submit" value="<%= edit ? 'edit' : 'create' %>">
    </form>
  </div>
<%- include('../includes/end.ejs') %>